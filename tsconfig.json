{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "assets/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "output"
  ]
}